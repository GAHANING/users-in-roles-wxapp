<view class="page">
  <view class="page__hd">
    <view class="page__title">权限申请</view>
    <view class="page__desc">
    </view>
  </view>
  <view class="page__bd">
    <form bindsubmit="submitAdd">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">应用名称</view>
          </view>
          <view class="weui-cell__bd">
            <input value="{{appName}}" id="appName" class="weui-input" name="appName" />
          </view>
        </view>

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">姓名</view>
          </view>
          <view class="weui-cell__bd">
            <input value="{{name}}" id="name" class="weui-input" name="name" />
          </view>
        </view>

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">手机号</view>
          </view>
          <view class="weui-cell__bd">
            <input value="{{mobile}}" id="mobile" class="weui-input" name="mobile" />
          </view>
        </view>

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">备注</view>
          </view>
          <view class="weui-cell__bd">
            <input value="{{remark}}" id="remark" class="weui-input" name="remark" />
          </view>
        </view>

      </view>

      <view class="weui-btn-area">
        <button class="weui-btn" type="primary" form-type="submit">确定</button>
      </view>
    </form>
    <include src="../footer.wxml" />
  </view>
</view>